<tal:block metal:define-macro="masterdetailsplit2">
<tal:block metal:use-macro="context/page_macros/base">

<tal:block metal:fill-slot="center_panel">
<div id="master_panel">
    <tal:block metal:define-slot="master_panel"/>
</div>
<div id="top_detail_panel">
    <tal:block metal:define-slot="top_detail_panel"/>
</div>
<div id="bottom_detail_panel">
    <tal:block metal:define-slot="bottom_detail_panel"/>
</div>
</tal:block>

<tal:block metal:fill-slot="script_layout">
<script>
Ext.onReady(function(){
    Ext.getCmp('center_panel').add(
        new Ext.Panel({
            layout: 'border',
            defaults: {'border':false},
            items: [{
                region: 'west',
                width: 300,
                contentEl: 'master_panel',
                id: 'master_panel',
                layout: 'fit',
                split: true
            },{
                region: 'center',
                layout: 'border',
                defaults: {'border':false},
                items: [{
                    region: 'center',
                    contentEl: 'top_detail_panel',
                    id: 'top_detail_panel',
                    split: true,
                    layout: 'fit'
                },{
                    region: 'south',
                    contentEl: 'bottom_detail_panel',
                    id: 'bottom_detail_panel',
                    split: true,
                    layout: 'fit',
                    height: 200
                }]
            }]
        }
    ));
});
</script>
<!-- Chain the macro -->
<tal:block metal:define-slot="script_layout">
<script>
Ext.onReady(function(){
    Ext.getCmp('master_panel').add(new Zenoss.PlaceholderPanel({
        text: 'Ext.getCmp("master_panel"), metal:fill-slot="master_panel"'
    }));
    Ext.getCmp('top_detail_panel').add(new Zenoss.PlaceholderPanel({
        text: 'Ext.getCmp("top_detail_panel"), metal:fill-slot="top_detail_panel"'
    }));
    Ext.getCmp('bottom_detail_panel').add(new Zenoss.PlaceholderPanel({
        text: 'Ext.getCmp("bottom_detail_panel"), metal:fill-slot="bottom_detail_panel"'
    }));
});
</script>
</tal:block>
</tal:block>

</tal:block>
</tal:block>
