<span tal:replace="structure here/standard_html_header"/>
<tal:block
    tal:define="tableName string:ncoeventdetail;
    serverserial request/serverserial;
    servername request/servername;
    sesskey python:tableName+str(serverserial)+servername;
    ishist python:here.scSortedTableSetAtt(sesskey,'ev_ishist',0);
    params python:'&serverserial='+str(serverserial)+'&servername='+servername;
    event python:here.getEventDetail(serverserial, servername,ishist);
    objects event/getEventJournals;
    batch python:here.scSortedTableGetBatch(sesskey, objects, usebatch=0);"
    tal:on-error="python: 'Unable to load Event Detail for Serial %s Server %s' 
                                % (servername, serverserial)"
    >    
<head metal:use-macro="here/ncoEventHeader/macros/ncoEventHeader"></head>

<table metal:use-macro="here/ncoEventTop/macros/ncoEventTop"></table>

<table border="0" cellpadding="3" width="100%" 
    align="center" bgcolor="#ffffff" cellspacing="1">
    <tr>
        <th class="tableheader" 
            tal:define="hclass python:here.scSortedTableHeaderStyle(
                                sesskey,'user','tableheader')"
            tal:attributes="class hclass">
            <a href="_" class="tableheader"
                tal:attributes="href python:here.scSortedTableHref(
                        sesskey,'user',sortRule='nocase',params=params);
                                class hclass">
                User
            </a>
        </th>
        <th class="tableheader" 
            tal:define="hclass python:here.scSortedTableHeaderStyle(
                                sesskey,'date','tableheader')"
            tal:attributes="class hclass">
            <a href="_" class="tableheader"
                tal:attributes="href python:here.scSortedTableHref(
                        sesskey,'date',sortRule='nocase',params=params);
                                class hclass">
                Date
            </a>
        </th>
        <th class="tableheader"
            tal:define="hclass python:here.scSortedTableHeaderStyle(
                                sesskey,'text','tableheader')"
            tal:attributes="class hclass">
            <a href="_" class="tableheader"
                tal:attributes="href python:here.scSortedTableHref(
                                    sesskey,'text',params=params);
                                class hclass">
                Text
            </a>
        </th>
    </tr>
    <tr tal:repeat="journal batch">
        <td class=tableheader tal:content="journal/user">user</td>
        <td class=tablevalues tal:content="journal/date">date</td>
        <td class=tablevalues tal:content="journal/text">text</td>
    </tr>
</table>
</tal:block>
<span tal:replace="structure here/standard_html_footer"/>
