<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<table class="zentable" cellpadding="3" cellspacing="1"
    tal:define="props here/zenPropertyIds">
    <tr>
      <th class="tabletitlel" colspan="4">
      Device Class Configuration
      </th>
    </tr>
    <tr>
      <th class="tableheader" align="center">Property</th>
      <th class="tableheader" align="center">Path</th>
      <th class="tableheader" align="center">Value</th>
      <th class="tableheader" align="center">Type</th>
    </tr>
    <tr tal:repeat="prop props">
      <td class="tablevalues" align="left" tal:content="prop">
        zPingInterfaceRegex
      </td>
      <td class="tablevalues" align="left" 
        tal:content="python: here.zenPropertyPath(prop)"> 
        /Devices/Servers
      </td>
      <td class="tablevalues" align='left'
        tal:content="python: here.zenPropertyString(prop)"> 
        int
      </td>
      <td class="tablevalues" align='left'
        tal:content="python: here.zenPropertyType(prop)"> 
        int
      </td>
    </tr>
</table>
<form tal:condition="here/isManager" method="post"
    tal:attributes="action string:${request/URL1}">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1">
<tr class="tabletitlel"><th>Add/Update Device Property</th></tr>
<tr>
    <td>
        <select name="propname">
            <option tal:repeat="propname here/zenPropertyIds"
                tal:content="propname" tal:attributes="value propname">
                    zCricketDeviceType
            </option>
        </select>
        <input class="tablevalues" type="text" name="propvalue" size="35"/>
        <input class="tablevalues" type="submit" 
            name="setZenProperty:method" value=" Add " />
    </td>
</tr>
</table>
</form>
<form tal:condition="here/isManager" method="post"
    tal:attributes="action string:${request/URL1}">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>
<table class="zentable" cellpadding="3" cellspacing="1">
<tr class="tabletitlel"><th>Delete Device Property</th></tr>
<tr>
    <td>
        <select name="propname">
            <option tal:repeat="
                propname python:here.zenPropertyIds(False)"
                tal:content="propname" tal:attributes="value propname">
                    zCricketDeviceType
            </option>
        </select>
        <input class="tablevalues" type="submit" 
            name="deleteZenProperty:method" value=" Delete " />
    </td>
</tr>
</table>
</form>

</tal:block>
</tal:block>
