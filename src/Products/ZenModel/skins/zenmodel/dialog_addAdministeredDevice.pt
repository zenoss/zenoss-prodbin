<h2>Add Administered Device</h2>
<form method="post" tal:attributes="action here/absolute_url_path" name="_">
<input type="hidden" name="csrf_token"
        tal:attributes="value context/csrf_token/token">
<input type="hidden" name="zenScreenName"
         tal:attributes="value string:administeredDevices" />
<input type="hidden" name="redirect" value="true"/>
<input type='hidden' name="type" value="device"/>
<span id="errmsg" style="color:red;"></span>
<br/>
<div id="deviceLiveSearch" style="width:30em;position:relative;">
</div>
<br/><br/>
<div id="dialog_buttons">
<input tal:attributes="id string:dialog_submit;
                        type string:submit;
                        value string:OK"
                        name="manage_addAdministrativeRole:method"/>
<input id="dialog_cancel" type="button" value="Cancel"
        onclick="$('dialog').hide()"/>
</div>
</form>
