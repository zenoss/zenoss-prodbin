<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="title">Zenoss: Settings</tal:block>
<tal:block metal:fill-slot="contentPane">

<script>
function popupMapHelp() {
    mySimpleDialog = new YAHOO.widget.SimpleDialog("dlg", {
        width: "30em",
        fixedcenter: true,
        modal:false,
        visible:false,
        draggable:true});
    mySimpleDialog.setHeader("Google Maps API Key");
    baseurl = currentWindow().location.href.replace(
        '/zport/dmd/editSettings','');
    mySimpleDialog.setBody(
       "Accessing the free Google Maps API requires the " +
       "specification of an API key linked to a base URL.  "+
       "You can obtain a free API key from Google at <"+"a href='"+
       "http://www.google.com/apis/maps/signup.html' target='blank'>"+
       "http://www.google.com/apis/maps/signup.html<"+"/a>. " +
       "For your web site URL, use the base URL, <"+"em>including port<"+
       "/em>, "+
       "that you use to access your Zenoss instance "+
       "(you used "+baseurl+" to access this instance).");
    addElementClass(currentDocument().body, 'yui-skin-sam');
    mySimpleDialog.render(currentDocument().body);
    mySimpleDialog.show();
}
YAHOO.zenoss.loader.require(['container']);
YAHOO.zenoss.loader.insert();
</script>

