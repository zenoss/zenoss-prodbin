if [ -z "$ZENHOME" ] ; then
    echo ERROR: '$ZENHOME' is not set.
    echo This is usually caused by executing this command as root rather than \
as the zenoss user.  Either define '$ZENHOME' or run this command as a \
different user.
    exit 1
fi

RRDCACHED_ADDRESS=$ZENHOME/var/rrdcached.sock
JOURNALDIR=$ZENHOME/var/rrd_journals
PIDFILE=$ZENHOME/var/rrdcached.pid
PS="ps -eo pid"

running() {
    if [ -f $PIDFILE ]; then
        PID=`cat $PIDFILE 2>/dev/null`
        kill -0 $PID 2>/dev/null || $PS | grep -q "^ *$PID$"
        return $?
    fi
    return 1
}

start() {
    if running; then
        echo is already running
    else
        echo starting...
	$ZENHOME/bin/rrdcached -p $PIDFILE -l $RRDCACHED_ADDRESS -j $JOURNALDIR $OPTS
    fi
}

run() {
    export OPTS="-g $OPTS"
    start
}

stop() {
    echo "stopping..."
    if [ ! -f $PIDFILE ]; then
        echo "already stopped"
    else
        kill `cat $PIDFILE`
    fi
}

restart() {
    stop
    start
}

status() {
    if [ ! -f $PIDFILE ]; then
        echo "not running"
    else
        echo "program running; pid=`cat $PIDFILE`"
    fi
}

usage() {
    echo "Usage: zenrrdcache [run|start|restart|stop|status] [options]"
}


ACTION=$1
shift
export OPTS="$@"
mkdir -p $JOURNALDIR
$ACTION || usage
