<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">
<form id="clauseForm" 
      method="post" 
      tal:attributes="action here/absolute_url_path">
<input type="hidden" name="zenScreenName" tal:attributes="value template/id"/>


        <tal:block tal:define="
        tableName string:eventCommands;
        zem here/ZenTableManager;
        objects here/commands;
        batch python: here.ZenTableManager.getBatch(tableName,objects); 
            tabletitle string:">
        <tal:block metal:use-macro="here/zenuimacros/macros/zentable">

        <!--====Optional titlebar slots=============

            <tal:block metal:fill-slot="filterslot">
            </tal:block>

            <tal:block metal:fill-slot="menuslot">
            </tal:block>

            ==========================================-->

        <tal:block metal:fill-slot="zentablecontents">
        <!-- BEGIN TABLE CONTENTS -->
            
  <tr>
    <th class="tableheader" colspan="4">Commands triggered by events:</th>
  </tr>
    <tr>
    <th tal:replace="structure python:zem.getTableHeader(
                            tableName,'primarySortKey','Name')"/>
    <th tal:replace="structure python:zem.getTableHeader(
                            tableName,'delay','Enabled')"/>
    <th tal:replace="structure python:zem.getTableHeader(
                            tableName,'action','Command')"/>
    <th tal:replace="structure python:zem.getTableHeader(
                            tableName,'enabled','Event Filter')"/>
    </tr>

 <tal:block tal:repeat="command batch">
 <tr tal:define="odd repeat/command/odd"
    tal:attributes="class python:test(odd, 'odd', 'even')">
    <td class="tablevalues">
       <input type="checkbox" name="ids:list" 
           tal:attributes="value command/getId"/>
        <a tal:attributes='href command/getPrimaryUrlPath' 
           tal:content="command/id"/>
    </td>
    <td class="tablevalues" tal:content="python:command.enabled"/>
    <td class="tablevalues" tal:content="command/command"/>
    <td class="tablevalues" tal:content="command/where"/>
  </tr>
  </tal:block>

  <tr>
      <td colspan="4" class="tableheader">
          <span metal:use-macro="here/zenTableNavigation/macros/navbody"/>
      </td>
  </tr>

  <tr>
      <td class="tableheader" align="left" colspan="4">
          <input class="tablevalues" size="25" name="id" />
          <input class="tableheader" type="submit" value=" Add "
               name="manage_addCommand:method" />
          <input class="tableheader" type="submit" 
              name="manage_deleteCommands:method" value="Delete" />
      </td>
  </tr>

        <!-- END TABLE CONTENTS -->

        </tal:block>
        </tal:block>
        </tal:block>
        

</form>
</tal:block>
</tal:block>
