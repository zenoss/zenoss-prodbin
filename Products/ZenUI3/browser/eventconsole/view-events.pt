<script>
Ext.onReady(function(){
    var toolbar_items = [{
            xtype: 'tbtext',
            text: '<a href="viewHistoryEvents'+location.search+'">Event Archive...<'+'/a'+'>',
            style: {
                marginTop: '4px'
            }
        }, {
            xtype: 'tbfill'
        },
        Ext.create('Zenoss.LiveGridInfoPanel', {
            grid: 'events_grid'
        })
    ];

    Ext.each(toolbar_items,
             function(item) {this.add(item);},
             Ext.getCmp('footer_bar'));
});
</script>
