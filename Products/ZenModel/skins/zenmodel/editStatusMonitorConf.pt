<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<form method=post 
    tal:attributes="action string:${here/absolute_url_path}">
    <input type="hidden" name="zenScreenName" 
        tal:attributes="value template/id" /> 
<br />
<table border="0" cellpadding="3" width="100%" 
    align="left" bgcolor="#ffffff" cellspacing="1">
    <tr tal:define="message request/message | string:State at time:">
        <td class=tableheader colspan=4
            tal:content="string:${message} ${here/getNowString}" />
    </tr>
    <tr>
      <td class="tableheader" align="left">Ping Timeout</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="timeOut:float" 
            tal:attributes="value here/timeOut" />
      </td>
      <td class="tableheader" align="left">Ping Tries</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="tries:int" 
            tal:attributes="value here/tries" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Snmp Timeout</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snmpTimeOut:float" 
            tal:attributes="value here/snmpTimeOut" />
      </td>
      <td class="tableheader" align="left">Snmp Tries</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snmpTries:int" 
            tal:attributes="value here/snmpTries" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Cycle Fail Warning</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="cycleFailWarn:int" 
            tal:attributes="value here/cycleFailWarn" />
      </td>
      <td class="tableheader" align="left">Cycle Fail Critical</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="cycleFailCritical:int" 
            tal:attributes="value here/cycleFailCritical" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Cycle Interval (secs)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="cycleInterval:int" 
            tal:attributes="value here/cycleInterval" />
      </td>
      <td class="tableheader" align="left">Snmp Cycle Interval (secs)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snmpCycleInterval:int" 
            tal:attributes="value here/snmpCycleInterval" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Maximum Failures</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="maxFailures:int" 
            tal:attributes="value here/maxFailures" />
      </td>
      <td class="tableheader" align="left">Config Reload Interval (mins)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="configCycleInterval:int" 
            tal:attributes="value here/configCycleInterval" />
      </td>
    </tr>
    <tr>
        <td class="tableheader" align="left">
            Production State Threshold</td>
        <td class="tablevalues" align="left" colspan="3">
            <select class="tablevalues" name="prodStateThreshold:int"
            tal:define="pstates here/getProdStateConversions;
                        curstate here/prodStateThreshold">
                <option tal:repeat="pstate pstates" 
                    tal:attributes="value python:pstate[1]; 
                        selected python:curstate == pstate[1]"
                    tal:content="python:pstate[0]">localhost</option>
            </select>
        </td>
    </tr>
    <tr>
        <td class=tableheader align="left" >
        </td>
        <td align="left"  class="tableheader" colspan=3>
            <input class="tableheader" type="submit" value=" Save "
                name="manage_editStatusMonitorConf:method" />
        </td>
    </tr>
</table>
</form>

</tal:block>
</tal:block>