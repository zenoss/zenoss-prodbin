<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<form method=post 
    tal:attributes="action string:${here/absolute_url_path}">
    <input type="hidden" name="zenScreenName" 
        tal:attributes="value template/id" /> 
<table class="zentable" cellpadding="3" cellspacing="1">
    <tr tal:define="message request/message | string:State at time:">
        <th class=tabletitle colspan=4
            tal:content="string:${message} ${here/getNowString}" />
    </tr>
    <tr>
      <td class="tableheader">Snmp Cycle Interval (secs)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="snmpCycleInterval:int" 
            size="10" tal:attributes="value here/snmpCycleInterval"/>
      </td>
    </tr>
    <tr>
      <td class="tableheader">Config Cycle Interval (mins)</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="configCycleInterval:int" 
            size="10" tal:attributes="value here/configCycleInterval"/>
      </td>
    </tr>
    <tr>
        <td class="tableheader" align="left">
            Production State Threshold</td>
        <td class="tablevalues" align="left" colspan="3">
            <select class="tablevalues" name="prodStateThreshold:int"
            tal:define="pstates here/getProdStateConversions;
                        curstate here/prodStateThreshold">
                <option tal:repeat="pstate pstates" 
                    tal:attributes="value python:pstate[1]; 
                        selected python:curstate == pstate[1]"
                    tal:content="python:pstate[0]">localhost</option>
            </select>
        </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Render URL</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="renderurl" size="50"
            tal:attributes="value here/renderurl" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Render User</td>
      <td class="tablevalues">
        <input class="tablevalues" type="text" name="renderuser" 
            tal:attributes="value here/renderuser" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Render Password</td>
      <td class="tablevalues">
        <input class="tablevalues" type="password" name="renderpass" 
            tal:attributes="value here/renderpass" />
      </td>
    </tr>
    <tr>
      <td class="tableheader" align="left">Default RRD Create Command</td>
      <td class="tablevalues">
	<textarea class="tablevalues" rows=5 cols=60
		   name="defaultRRDCreateCommand" 
                    tal:content="here/defaultRRDCreateCommand">
        </textarea>
      </td>
    </tr>
    <tr>
        <td class=tableheader align="left" >
        </td>
        <td align="left"  class="tableheader" colspan=3>
            <input class="tableheader" type="submit" value=" Save "
                name="manage_editPerformanceConf:method" />
        </td>
    </tr>
</table>
</form>

</tal:block>
</tal:block>
